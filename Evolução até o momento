package aular.pkg02;

public class Appoculos {
    public static void main(String[] args) {
        Óculos oc1 = new Óculos ();
        oc1.modelo = "feminino";
        oc1.cor = "preto";
        oc1.lente = 0.75f;
        oc1.estilo = "quadrado";
        oc1.limpo = false;
        
        oc1.entregarparanatalia();
    }
}

package aular.pkg02;
public class Óculos {
    String modelo;
    String cor;
    float lente;
    String estilo;
    boolean limpo;
    
    void usar (){
        
    }
    void quabrar (){
        
    }
    void entregarparanatalia (){
        if (this.limpo == true) {
        System.out.println("Entregar para mozao usar <3");
    } else {
        System.out.println("Limpar antes de dar para mozao, obvio!");
            }
        
    }
   
}

package aular.pkg02;
public class Caneta {
    String modelo;
    String cor;
    float ponta;
    int carga;
    boolean tampada;
    
    void status (){
        System.out.println("Uma caneta " + this.cor);
        System.out.println("Esta tampada? " + this.tampada);
        System.out.println("Qual tamanho da ponta? " + this.ponta);
        System.out.println("Qual porcentagem de carga? " + this.carga);
             
    }
    void rabiscar (){
      if (this.tampada == true){
          System.out.println("ERRO! Nao posso rabiscar, a caneta esta tampada!");
      }  else {
          System.out.println("O que posso rabiscar para voce hoje?");
      }
    }
    void tampar (){    
        this.tampada = true;
      
    }
    void destampar (){
   
    }
    
    }
    
    package aular.pkg02;


public class Aula02 {
    public static void main(String[] args) {
        Caneta c1 = new Caneta ();
        c1.cor = "Azul";
        c1.ponta = 0.5f;
        c1.carga = 55;
        
        c1.tampar();
        c1.rabiscar();
        
        Caneta c2 = new Caneta ();
        c2.cor = "Vermelha";
        c2.ponta = 0.5f;
        c2.carga = 75;
       
        c2.destampar();
        c2.rabiscar();
    }
    
}

package objetoabstrato;

public class Estudo {
    
    String oque;
    boolean estudar;
    float quando;
    String aonde;
    String comquem;
    boolean POO;
   
        void estudar () {
        if (this.POO == true) {
        System.out.println("Estudar POO com a Lets");
    }
        
    }
   
}

package objetoabstrato;

public class Appestudo {
    public static void main (String[] args) {
            Estudo e1 = new Estudo();
            
            e1.estudar = true;
            e1.oque = "POO";
            e1.quando = 12.00f;
            e1.comquem = "lets";
            e1.POO = true;
            
            e1. estudar ();
                    
                    
                 
    }
}

























